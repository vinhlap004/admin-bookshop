<div class="container mt-5">

  <!-- row -->
  <div class="row tm-content-row">
    <div class="tm-block-col tm-col-avatar">
      <div class="tm-bg-primary-dark tm-block tm-block-avatar">
        <h2 class="tm-block-title">Đổi ảnh đại diện</h2>
        <div class="tm-avatar-container">
          <img
          src="img/avatar.png"
          alt="Avatar"
          class="tm-avatar img-fluid mb-4"
          />
          <a href="#" class="tm-avatar-delete-link">
            <i class="far fa-trash-alt tm-product-delete-icon"></i>
          </a>
        </div>
              <!-- <button class="btn btn-primary btn-block text-uppercase">
                Tải ảnh lên
              </button> -->
              
            </div>
          </div>
          <div class="tm-block-col tm-col-account-settings">
            <div class="tm-bg-primary-dark tm-block tm-block-settings">
              <h2 class="tm-block-title">Chỉnh sửa tài khoản</h2>
              <!-- err msg -->
              <!-- if err exists -->
              {{#if err}}
              <!-- each err -->
              {{#each err}}
              <!-- show err.msg -->
              <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <h1 style="font-size:20px;">{{this.msg}}</h1>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              {{/each}}
              {{/if}}
              <!-- end err msg -->
              <form 
              action="/update" 
              method="POST" 
              class="tm-signup-form row"
              >
              <div class="form-group col-lg-6">
                <label for="name">Tên người dùng (<span style="color:#F5A623;">*</span>)</label>
                <input
                id="name"
                name="name"
                type="text"
                value="{{user.name}}"
                class="form-control validate"
                />
              </div>
              <div class="form-group col-lg-6">
                <label for="email">Email (<span style="color:#F5A623;">*</span>)</label>
                <input
                id="email"
                name="email"
                type="text"
                value="{{user.email}}"
                class="form-control validate"
                />
              </div>
              <div class="form-group col-lg-6">
                <label for="password">Mật khẩu hiện tại (<span style="color:#F5A623;">*</span>)</label>
                <input
                id="password"
                name="password"
                type="password"
                class="form-control validate"
                />
              </div> 
              <div class="form-group col-lg-6">
                <label for="phone">Số điện thoại (<span style="color:#F5A623;">*</span>)</label>
                <input
                id="phone"
                name="phone"
                type="text"
                value="{{user.phone}}"
                class="form-control validate"
                />
              </div>
              <div class="form-group col-lg-6">
                <label for="type">Loại (<span style="color:#F5A623;">*</span>)</label>
                <input
                id="type"
                name="type"
                type="text"
                value="{{user.type}}"
                class="form-control validate"
                />
              </div>
              <div class="form-group col-lg-6">
                <label for="img">Link ảnh đại diện (<span style="color:#F5A623;">*</span>)</label>
                <input
                id="img"
                name="img"
                type="text"
                value="{{user.img}}"
                class="form-control validate"
                />
              </div>
              <div class="form-group col-lg-12">
                <label for="address">Địa chỉ (<span style="color:#F5A623;">*</span>)</label>
                <input
                id="address"
                name="address"
                type="text"
                value="{{user.address}}"
                class="form-control validate"
                />
              </div>
              <h2 class="tm-block-title col-lg-12">Đổi mật khẩu</h2>
              <div class="form-group col-lg-6">
                <label for="password1">Mật khẩu mới</label>
                <input
                id="password1"
                name="password1"
                type="password"
                class="form-control validate"
                />
              </div>
              <div class="form-group col-lg-6">
                <label for="password2">Nhập lại mật khẩu mới</label>
                <input
                id="password2"
                name="password2"
                type="password"
                class="form-control validate"
                />
              </div>
              <div class="form-group col-lg-12">
                <label class="tm-hide-sm">&nbsp;</label>
                <button
                type="submit"
                class="btn btn-primary btn-block text-uppercase"
                >
                Cập nhật
              </button>
            </div>
            <div class="col-12">
              <button
              type="submit"
              class="btn btn-primary btn-block text-uppercase"
              >
              Xóa tài khoản
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="js/jquery-3.3.1.min.js"></script>
